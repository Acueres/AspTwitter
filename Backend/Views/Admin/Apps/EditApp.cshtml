@{
    ViewData["Title"] = "Edit App";
}

<h2 class="mb-5">Edit App</h2>
<form class="border" asp-controller="Admin" asp-action="EditApp">
    <div class="mb-3 row">
        <label for="name" class="col-1 col-form-label">Name</label>
        <div class="col-4">
            <input type="text" class="form-control-plaintext" name="name" value="@ViewBag.App.Name" readonly>
        </div>
    </div>
    <div class="mb-3 row">
        <label for="info" class="col-1 col-form-label">Info</label>
        <div class="col-4">
            <input type="text" class="form-control" name="info" value="@ViewBag.App.Info">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="path" class="col-1 col-form-label">App path</label>
        <div class="col-4">
            <input type="text" class="form-control" name="path" value="@ViewBag.App.ConfigPath">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
</form>