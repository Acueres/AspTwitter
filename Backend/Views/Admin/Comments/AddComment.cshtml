@{
    ViewData["Title"] = $"Add Comment";
}

<h2 class="mb-5">Add Comment</h2>
<form class="border" asp-controller="Admin" asp-action="Add Comment">
    <div class="mb-3 row">
        <label for="username" class="col-1 col-form-label">Username</label>
        <div class="col-4">
            <input type="text" class="form-control" name="username" value="@ViewBag.Username">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="username" class="col-1 col-form-label">Entry Id</label>
        <div class="col-4">
            <input type="text" class="form-control" name="username" value="@ViewBag.EntryId">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="text" class="col-1 col-form-label">Text</label>
        <div class="col-4">
            <textarea class="form-control" name="text" rows="5" maxlength="128"></textarea>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>